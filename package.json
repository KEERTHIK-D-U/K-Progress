{
    "name": "ai-todo-tracker-root",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "build": "cd client && npm install && npm run build",
        "start": "cd server && npm start",
        "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\""
    },
    "devDependencies": {
        "concurrently": "^8.0.0"
    }
}